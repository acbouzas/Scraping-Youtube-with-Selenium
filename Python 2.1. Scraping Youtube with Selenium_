   "source": [
    "# Since we are trying to find top popular videos, views and when were they posted,\n",
    "# We search for the path that leads us to click the \"popular\" button.\n",
    "\n",
    "driver.find_element(By.XPATH, '//*[@id=\"chips\"]/yt-chip-cloud-chip-renderer[2]').click()"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 13,
   "id": "fe693aad",
   "metadata": {},
   "outputs": [],
   "source": [
    "# Scroll down until the page finishes loading\n",
    "while True:\n",
    "    # Scroll to the bottom of the page\n",
    "    driver.execute_script(\"window.scrollTo(0, document.documentElement.scrollHeight);\")\n",
    "    \n",
    "    # Wait for some time to let the content load\n",
    "    time.sleep(2)\n",
    "          \n",
    "    margin = 100  # Adjust the margin as needed\n",
    "    if driver.execute_script(\"return window.innerHeight + window.pageYOffset >= document.documentElement.scrollHeight - {};\".format(margin)):\n",
    "        break"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 14,
   "id": "0b431d4a",
   "metadata": {},
   "outputs": [],
   "source": [
    "# We use the driver to find in the html the elements we are looking for\n",
    "videos = driver.find_elements(By.CLASS_NAME,'style-scope ytd-rich-grid-media')\n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 15,
   "id": "55e1c603",
   "metadata": {},
   "outputs": [],
   "source": [
    "# Create a video list and append to it all the info collected from each individual video.\n",
    "\n",
    "video_list = []\n",
    "\n",
    "for video in videos:\n",
    "    title = video.find_element(By.XPATH,'.//*[@id=\"video-title\"]').text\n",
    "    views = video.find_element(By.XPATH,'.//*[@id=\"metadata-line\"]/span[1]').text\n",
    "    when = video.find_element(By.XPATH,'.//*[@id=\"metadata-line\"]/span[2]').text\n",
    "    vid_item = {\n",
    "        'Title' : title, \n",
    "        'Views': views,\n",
    "        'Posted':when\n",
    "    }\n",
    "    video_list.append(vid_item)\n",
    "    \n"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 16,
   "id": "f42ef1df",
   "metadata": {},
   "outputs": [],
   "source": [
    "# Attach the info to a Dataframe\n",
    "df = pd.DataFrame(video_list)"
   ]
